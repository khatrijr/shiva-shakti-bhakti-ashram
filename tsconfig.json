
  {
    "compilerOptions": {
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "module": "esnext",
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "moduleResolution": "node",
      "strict": true,
      "isolatedModules": true,
      "noEmit": true,
      "noImplicitAny": false,
      "allowJs": true,
      "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "build", "dist"]
  }
  